args = "CRM API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Preview"

[[workflows.workflow]]
name = "CRM API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/crm-api && npm run dev"
