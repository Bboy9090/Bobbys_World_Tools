{
  "name": "pandora-codex-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Pandora Codex - Monorepo for device management and diagnostics platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "web:dev": "pnpm --filter pandora-codex-web dev",
    "api:dev": "pnpm --filter @pandora-codex/backend dev",
    "arsenal:status": "node packages/arsenal-scripts/status.js",
    "check:android-tools": "node packages/arsenal-scripts/check-android-tools.js",
    "check:rust": "node packages/arsenal-scripts/check-rust.js",
    "bootforge:build": "cd crates/bootforge-usb && cargo build --release",
    "bootforge:test": "cd crates/bootforge-usb && cargo test",
    "phoenix:dev": "cd apps/phoenix-key && python main.py",
    "desktop": "electron electron-main.cjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "electron": "39.2.6",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
