{
  "package": {
    "productName": "Bobbys Workshop",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.bboy9090.bobbysworkshop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "bundle/resources/nodejs/**/*",
        "bundle/resources/server/**/*"
      ]
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": false,
        "sidecar": true,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/**", "$LOCALAPPDATA/**", "$TEMP/**", "$HOME/**"]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://localhost:3001/**", "https://dl.google.com/**"]
      }
    },
    "windows": [
      {
        "title": "Bobbys Workshop",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
